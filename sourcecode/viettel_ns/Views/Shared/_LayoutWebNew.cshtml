<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="Content-Style-Type" content="text/css" />
    <link rel="SHORTCUT ICON" href="/Content/favicon.ico" />
    <title>@ViewBag.Title</title>
    @Html.Partial("_css")
    @Html.Partial("_cssWebNew")
    @Html.Partial("_jsWebNew")
    @*@Html.Partial("_js")*@
    <script src="/Scripts/js/js_report.js" type="text/javascript"></script>
    <script type="text/jscript">
        $(document).ready(function () {
            urlServerPath = '/Home';
            if ($('#idCauHinhHeThong>table').length) {
                $('.detail-placehold').addClass('min-height-1');
            }
            else {
                $('.detail-placehold').addClass('min-height-2');
            }
        })
    </script>
    @RenderSection("styles", required: false)
    @Html.PageStyles()
</head>
<body>
    <div class="clearfix">
        <div class="content clearfix" >
            <div class="clearfix">
                @Html.Action("Header", "Menu", new { Area = string.Empty })

                <div class="main-body">
                    <div class="menu-left">
                        @Html.Action("MenuLeft", "Menu", new { Area = string.Empty, id = ViewContext.RouteData.DataTokens["area"] })
                    </div>
                    <div class="detail-placehold">
                        @Html.BuildBreadcrumbWebNewButtons()
                        <div class="detail-panel">
                            @RenderBody()
                            <div class="clear"></div>
                        </div>
                        <div class="footer">
                            <div style="float: left; text-align: left;">
                                © CỤC TÀI CHÍNH BỘ QUỐC PHÒNG <br />
                                Địa chỉ: 14 Lý Nam Đế - Hoàn Kiếm - Hà Nội <br />
                                Tel: 069551327 - Fax:069551327 <br />
                            </div>
                            <div style="float: right; margin-top: 44px">
                                Phát triển bởi: Trung tâm Giải Pháp CNTT và Viễn Thông Viettel - Tập đoàn Viễn thông Quân đội <br />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clear"></div>
    @RenderSection("scripts", required: false)
    @Html.PageScripts()
</body>
</html>