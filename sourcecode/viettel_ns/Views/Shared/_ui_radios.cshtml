@model SelectList
@for (int i = 0; i < Model.Count(); i++)
{
    var item = Model.ElementAt(i);
    <div class="radio">
        <input type="radio" name="@item.Group.Name" id="@item.Group.Name-@i" value="@item.Value" checked="@item.Selected" />
        <label for="@item.Group.Name-@i">
            @item.Text
        </label>
    </div>
}
