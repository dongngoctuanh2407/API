@using Viettel.Domain.DomainModel
@model NNS_DotNhan

<div class="modal-body">
    <div class="form-group">
        <div class="form-group row">
            <div class="col-sm-6">
                <label for="txtLoaiDuToanModal">Loại dự toán</label>
                <p>@Html.Raw(Model.sTenLoaiDuToan)</p>
            </div>
            <div class="col-sm-6">
                <label for="txtNoiDungModal">Nội dung</label>
                <p>@Html.Raw(Model.sNoiDung)</p>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-6">
                <label for="txtSoChungTuModal">Số chứng từ</label>
                <p>@Html.Raw(Model.sSoChungTu)</p>
            </div>
            <div class="col-sm-6">
                <label for="txtNgayChungTuModal">Ngày chứng từ</label>
                <p>@Html.Raw(Model.dNgayChungTu.HasValue ? Model.dNgayChungTu.Value.ToString("dd/MM/yyyy") : string.Empty)</p>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-6">
                <label for="txtSoQuyetDinhModal">Số quyết định</label>
                <p>@Html.Raw(Model.sSoQuyetDinh)</p>
            </div>
            <div class="col-sm-6">
                <label for="txtNgayQuyetDinhModal">Ngày quyết định</label>
                <p>@Html.Raw(Model.dNgayQuyetDinh.HasValue ? Model.dNgayQuyetDinh.Value.ToString("dd/MM/yyyy") : string.Empty)</p>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <div class="text-center">
        <button class="btn btn-default" data-dismiss="modal"><i class="fa fa-ban" aria-hidden="true"></i><span>Hủy</span></button>
    </div>
</div>