@model VIETTEL.Areas.QLNguonNganSach.Models.DotNhanChiTietNDChiViewModel
@{
    ViewBag.Title = "Phân nguồn BTC theo nội dung chi BQP";
    Layout = "~/Views/Shared/_LayoutWebNew.cshtml";
    //Layout = "~/Views/Shared/sheet/_LayoutSheet.cshtml";
}
@section Styles{
    <link rel="stylesheet" type="text/css" href="~/Content/css/DanhMuc/style.css">
}

<div class="main">
    <div class="panel-list-item col-sm-12">
        <div class="card">
            <div class="card-body">
                @Html.Partial("_sheet", Model)
            </div>
        </div>
    </div>
</div>

<!-- Modal confirm sao chep -->
<div class="modal fade" id="confirmSaoChepModal" tabindex="-1" role="dialog" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title text-bold text-left" id="confirmModalLabel">Xác nhận sao chép số liệu</h3>
            </div>
            <div class="modal-body" id="contentConfirmSaoChepModal">
                <p style="font-size: 12pt">Bạn có muốn ghi đè số liệu?</p>
            </div>
            <div class="modal-footer">
                <div class="text-center">
                    <button class="btn btn-default" onclick="$('#sheet')[0].contentWindow.GetSoKiemTra(0)" data-dismiss="modal"><i class="fa fa-ban" aria-hidden="true"></i><span>Không</span></button>
                    <button class="btn btn-primary" onclick="$('#sheet')[0].contentWindow.GetSoKiemTra(1)" data-dismiss="modal"><i class="fa fa-download" aria-hidden="true"></i><span>Có</span></button>
                </div>
            </div>
        </div>
    </div>
</div>
<button type="button" id="btnShowConfirmSaoChep" data-toggle="modal" data-target="#confirmSaoChepModal"></button>