@model VIETTEL.Areas.QLNguonNganSach.Models.QLPhanNguonNDChiViewModel
@{
    var sheet = Model.Sheet;
}
<div class="tooltip-header-search">
    <label class="control-label">Phần nguồn BTC theo nội dung chi BQP</label>
    <input type="text" hidden value="@Model.iIdPhanNguon" id="iIdPhanNguon" />
    <label class="control-label pull-right">Phân nguồn năm @PhienLamViec.iNamLamViec - @Model.sNoiDung</label>
</div>
<iframe id="sheet" name="iframe-sheet" class="iframe-sheet"></iframe>
<div class="box_tong">
    <div id="nhapform">
        <div id="form2">
            <div class="button-bar">
                <div class="text-center">
                    <button class="btn btn-default" onclick="goBack('@Model.iIdPhanNguon')" style="margin-right: 10px;"><i class="fa fa-ban" aria-hidden="true"></i><span>Quay lại</span></button>
                    <button class="btn btn-primary btn-save" id="btnSave" ><i class="fa fa-download" aria-hidden="true"></i><span>Lưu</span></button>
                </div>
            </div>
        </div>
    </div>
</div>
<hr id="hr-split" />
<div id="ajax-div">
</div>
@using (Html.BeginScripts())
{
<script type="text/javascript">

        $(".btn-save").click(function () {
            $("#sheet")[0].contentWindow.Bang_HamTruocKhiKetThuc();
        });

        loadFrame(1);

        function goBack(id) {
            window.location.href = "/QLNguonNganSach/QLPhanNguonBTCTheoNDChiBQP/ViewDMNguonBTCCap/" + id;
        }

        $(".btn-option").click(function () {
            var option = $(this).data("id")
            loadFrame(option);
        });

        function loadFrame(option) {
            var id = '@Model.iID_Nguon' + "_" + '@Model.iIdPhanNguon' + "_" + '@Model.rSoTienConLai' + "_" + '@Model.rSoTienCoTheChi';
            var url = '@Url.Action("SheetFrame")'
                + "/?id=" + id;
            $("#sheet").attr("src", url);
        }
</script>
}
