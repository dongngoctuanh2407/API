@using Viettel.Domain.DomainModel
@model NNS_PhanNguon
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_LayoutWebNew.cshtml";
}

@section Styles{
    <link rel="stylesheet" type="text/css" href="~/Content/css/DanhMuc/style.css">
}

<div class="main">
    <div class="card">
        <div class="card-header">
            <div class="form-group">
                Xem chi tiết thông tin @Model.sSoChungTu
                <hr>
            </div>
        </div>
        <div class="card-body">
            <div class="form-group row">
                <div class="col-sm-12">
                    <label class="control-label">Nội dung</label>
                    <p><b>@Html.Raw(Model.sNoiDung)</b></p>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6">
                    <label class="control-label">Số chứng từ</label>
                    <p><b>@Model.sSoChungTu</b></p>
                </div>
                <div class="col-sm-6">
                    <label class="control-label">Ngày chứng từ</label>
                    <p><b>@(Model.dNgayChungTu.HasValue ? Model.dNgayChungTu.Value.ToString("dd/MM/yyyy") : "")</b></p>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6">
                    <label class="control-label">Số quyết định</label>
                    <p><b>@Model.sSoQuyetDinh</b></p>
                </div>
                <div class="col-sm-6">
                    <label class="control-label">Ngày quyết định</label>
                    <p><b>@(Model.dNgayQuyetDinh.HasValue ? Model.dNgayQuyetDinh.Value.ToString("dd/MM/yyyy") : "")</b></p>
                </div>
            </div>
            <div class="form-group text-center">
                <button class="btn btn-back" onclick="CancelSaveData()"><i class="fa fa-arrow-left" aria-hidden="true"></i><span>Quay lại</span></button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @Html.Partial("_SheetScript")
    <script src="~/Scripts/NguonNS/jsNguonNS_PhanNguon.js"></script>
}