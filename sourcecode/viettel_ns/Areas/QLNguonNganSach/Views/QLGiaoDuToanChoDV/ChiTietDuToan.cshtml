<div class="main">
    <div class="panel-list-item col-sm-12">
        <div class="card">
            <div class="card-body">
                @Html.Partial("_sheet")
            </div>
        </div>
    </div>
</div>

<!-- Modal confirm sao chep -->
<div class="modal fade" id="confirmModalSaoChep" tabindex="-1" role="dialog" aria-labelledby="confirmModalSaoChep" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title text-bold text-left" id="confirmModalLabel">Xác nhận sao chép số liệu</h3>
            </div>
            <div class="modal-body" id="contentConfirmModal">
                <p style="font-size: 12pt">Bạn có muốn ghi đè số liệu?</p>
            </div>
            <div class="modal-footer">
                <div class="text-center">
                    <button class="btn btn-default" data-dismiss="modal"><i class="fa fa-ban" aria-hidden="true"></i><span>Không</span></button>
                    <button class="btn btn-primary" onclick="loadFrame(true)" data-dismiss="modal"><i class="fa fa-download" aria-hidden="true"></i><span>Có</span></button>
                </div>
            </div>
        </div>
    </div>
</div>
<button type="button" id="btnShowConfirmSaoChep" data-toggle="modal" data-target="#confirmModalSaoChep"></button>



