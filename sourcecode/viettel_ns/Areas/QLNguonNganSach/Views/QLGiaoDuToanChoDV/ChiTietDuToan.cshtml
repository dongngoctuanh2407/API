}

@section Styles{
    <link rel="stylesheet" type="text/css" href="~/Content/css/DanhMuc/style.css">
}

@section Scripts{
    <script src="~/Scripts/QLNguonNganSach/QLGiaoDuToan/jsQLGiaoDuToanChoDVChiTiet.js"></script>
}
