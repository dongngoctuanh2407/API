@using Viettel.Domain.DomainModel
@model DM_KhoiDonViQuanLy
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutWebNew.cshtml";
}

@section Styles{
    <link rel="stylesheet" type="text/css" href="~/Content/css/DanhMuc/style.css">
}

<div class="main">
    <div class="card">
        <div class="card-header">
            <div class="form-group">
                Chi tiết @Model.sTenKhoi
                <hr>
            </div>
        </div>
        <div class="card-body">
            <div class="form-group">
                <div class="row detail-item">
                    <input type="hidden" id="txt_IDKhoi" value="@Model.iID_Khoi">
                    <div class="col-sm-4 form-group">
                        <label class="control-label"> Mã khối:</label>
                        <p><b>@Model.sMaKhoi</b></p>
                    </div>
                    <div class="col-sm-4 form-group">
                        <label class="control-label"> Tên khối:</label>
                        <p><b>@Model.sTenKhoi</b></p>
                    </div>
                    <div class="col-sm-12 form-group">
                        <label class="control-label"> Ghi chú:</label>
                        <p><b>@Model.sGhiChu</b></p>
                    </div>

                </div>
                <div class="form-group text-center">
                    <button class="btn btn-back" onclick="CancelSaveData()"><i class="fa fa-arrow-left" aria-hidden="true"></i><span>Quay lại</span></button>
                </div>
            </div>
    </div>
</div>

@section Scripts{
    @Html.Partial("_SheetScript")
    <script src="~/Scripts/DanhMuc/jsDMKhoiDonviQL.js"></script>

    }