@using Viettel.Domain.DomainModel
@model DM_KhoiDonViQuanLy
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_LayoutWebNew.cshtml";
}

@section Styles{
    <link rel="stylesheet" type="text/css" href="~/Content/css/DanhMuc/style.css">
}

<div class="main">
    <div class="card">
        <div class="card-header">
            <div class="form-group">
                @if (Model.iID_Khoi == new Guid())
                {
                    @Html.Raw("Thêm mới khối đơn vị quản lý")
                }
                else
                {
                    @Html.Raw("Cập nhật thông tin " + @Model.sTenKhoi)
                }

                <hr>
            </div>
        </div>
        <div class="card-body">
            <div class="form-group">
                <input type="hidden" id="txt_IDKhoi" value="@Model.iID_Khoi">
                <label for="txtMaKhoi">Mã khối</label>
                <input type="text" required id="txtMaKhoi" class="form-control" value="@Model.sMaKhoi" maxlength="50" />
            </div>
            <div class="form-group">
                <label for="txt_TenKhoi">Tên khối</label>
                <input type="text" required id="txt_TenKhoi" class="form-control" value="@Model.sTenKhoi" maxlength="500" />
            </div>
            <div class="form-group">
                <label for="txt_GhiChu">Ghi chú</label>
                <textarea id="txt_GhiChu" class="form-control">@Html.Raw(Model.sGhiChu)</textarea>
            </div>
            <div class="form-group text-center">
                <button class="btn btn-default" onclick="CancelSaveData()"><i class="fa fa-ban" aria-hidden="true"></i><span>Hủy</span></button>
                <button class="btn btn-primary" onclick="SaveData()"><i class="fa fa-download" aria-hidden="true"></i><span>Lưu</span></button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @Html.Partial("_SheetScript")
    <script src="~/Scripts/DanhMuc/jsDMKhoiDonviQL.js"></script>
}