@using VIETTEL.Areas.DanhMuc.Models
@model DMLoaiCongTrinhViewDetailModel

<div class="modal-body">
    <div class="form-group row">
        <div class="form-group">
            <div class="col-sm-6">
                <label for="txtMaCongTrinhModal">Mã công trình</label>
                <p>@Html.Raw(Model.sMaLoaiCongTrinh)</p>
            </div>
            <div class="col-sm-6">
                <label for="txtTenCongTrinhModal">Tên loại dự toán</label>
                <p>@Html.Raw(Model.sTenLoaiCongTrinh)</p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-6">
                <label for="txtTenVietTatModal">Tên viết tắt</label>
                <p>@Html.Raw(Model.sTenVietTat)</p>
            </div>
            <div class="col-sm-6">
                <label for="txtThuTuModal">Thứ tự</label>
                <p>@Html.Raw(Model.iThuTu)</p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-6">
                <label for="txtMaCongTrinhChaModal">Mã công trình cha</label>
                <p>@Html.Raw(Model.sMaLoaiCongTrinhCha)</p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-6">
                <label for="txtGhiChuModal">Ghi chú</label>
                <p>@Html.Raw(Model.sMoTa)</p>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <div class="text-center">
        <button class="btn btn-default" data-dismiss="modal"><i class="fa fa-ban" aria-hidden="true"></i><span>Hủy</span></button>
    </div>
</div>
