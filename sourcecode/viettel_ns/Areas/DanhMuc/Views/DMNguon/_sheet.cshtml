@model VIETTEL.Areas.DanhMuc.Models.DMNguonViewModel
@{
    var sheet = Model.Sheet;
}
<div class="tooltip-header-search">
    <div class="col-sm-4" style="display:flex;padding-left:0px;">
        <label class="control-label">Danh mục nguồn BTC cấp @PhienLamViec.iNamLamViec</label>
    </div>
    <div class="col-sm-8">
        <p class="pull-right" style="margin-top: 10px; font-size:14px">&nbsp;&nbsp;Xóa tìm kiếm</p>
        <label class="control-label pull-right" style="padding-left:20px;">F9: </label>
        <p class="pull-right" style="margin-top: 10px; font-size:14px">&nbsp;&nbsp;Tìm kiếm</p>
        <label class="control-label pull-right" style="padding-left:20px;">Enter: </label>
        <p class="pull-right" style="margin-top: 10px; font-size:14px" id="">&nbsp;&nbsp;Xóa</p>
        <label class="control-label pull-right" style="padding-left:20px;">Del: </label>
        <p class="pull-right" style="margin-top: 10px; font-size:14px">&nbsp;&nbsp;Lưu</p>
        <label class="control-label pull-right" style="padding-left:20px;">F10: </label>
        <p class="pull-right" style="margin-top: 10px; font-size:14px">&nbsp;&nbsp;Thêm dòng con</p>
        <label class="control-label pull-right" style="padding-left:20px;">F3: </label>
        <p class="pull-right" style="margin-top: 10px; font-size:14px">&nbsp;&nbsp;Thêm dòng</p>
        <label class="control-label pull-right">F2: </label>
    </div>
</div>
<iframe id="sheet" name="iframe-sheet" class="iframe-sheet"></iframe>
<div class="">
    <div id="nhapform">
        <div id="form2">
            <div class="button-bar">
                <div class="text-center">
                    <button class="btn btn-default" onclick="goBack();" style="margin-right: 10px;"><i class="fa fa-ban" aria-hidden="true"></i><span>Quay lại</span></button>
                    <button class="btn btn-primary btn-save" id="btnSave"><i class="fa fa-download" aria-hidden="true"></i><span>Lưu</span></button>
                </div>
            </div>
        </div>
    </div>
</div>
<hr id="hr-split" />
<div id="ajax-div">
</div>
@* Modal confirm *@
<div id="divModalConfirm">

</div>
@using (Html.BeginScripts())
{
<script type="text/javascript">

        $(".btn-save").click(function () {
            //$("#sheet")[0].contentWindow.Bang_HamTruocKhiKetThuc();
            $("#sheet")[0].contentWindow.DMNguon_BangDuLieu_Save();
        });

        loadFrame();

        function goBack() {
            window.location.href = "/DanhMuc/DMNguon/Index/";
        }

        //$(".btn-option").click(function () {
        //    var option = $(this).data("id")
        //    loadFrame(option);
        //});

    function loadFrame() {
        var url = '@Url.Action("SheetFrame")';
        $("#sheet").attr("src", url);
    }

    function loadModal(data) {
        $("#divModalConfirm").html(data);
    }
</script>
}
