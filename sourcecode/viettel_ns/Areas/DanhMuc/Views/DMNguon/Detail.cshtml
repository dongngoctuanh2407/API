@model Viettel.Domain.DomainModel.DanhMucNguonViewModel
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutWebNew.cshtml";
}
@section Styles{
    <link rel="stylesheet" type="text/css" href="~/Content/css/DanhMuc/style.css">
   
}

<div class="main">
    <div class="card">
        <div class="card-header">
            <div class="form-group">
                Chi tiết @Model.sNoiDung
                <hr>
            </div>
        </div>
        <div class="card-body">
            <div class="form-group">
                <div class="row detail-item">
                    <div class="col-md-6">
                        <div>
                            <label class="control-label">Mã chương trình mục tiêu:</label>
                        </div>
                        <div>
                            <label>@Model.sMaCTMT</label>
                        </div>

                    </div>
                    <div class="col-md-6">
                        <div>
                            <label class="control-label">Mã nguồn:</label>
                        </div>
                        <div>
                            <label>@Model.sMaNguon</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div>
                            <label class="control-label">Loại:</label>
                        </div>
                        <div>
                            <label>@Model.sLoai</label>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div>
                            <label class="control-label">Khoản: </label>
                        </div>
                        <div>
                            <label>@Model.sKhoan</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div>
                            <label class="control-label">Nội dung: </label>
                        </div>
                        <div>
                            <label>@Model.sNoiDung</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div>
                            <label class="control-label">Mã nguồn cha: </label>
                        </div>
                        <div>
                            <label>@Model.sMaNguonCha</label>
                        </div>
                    </div>
                    <input hidden type="text" name="iID_Nguon" value="@Model.iID_Nguon" id="txtIDMaNguon" />
                </div>
            </div>
        </div>
        <div class="form-group text-center">
            <button class="btn btn-back" onclick="CancelSaveData()"><i class="fa fa-arrow-left" aria-hidden="true"></i><span>Quay lại</span></button>
        </div>
    </div>
</div>




@section Scripts{
    <script src="~/Scripts/DanhMuc/jsDMNguon.js"></script>
    }
