@using Viettel.Models.QLVonDauTu
@model VDTKeHoachVonUngDuocDuyetViewModel
@{
    ViewBag.Title = "Xem thông tin kế hoạch vốn ứng";
    Layout = "~/Views/Shared/_LayoutWebNew.cshtml";
}

@section Styles{
    <link rel="stylesheet" type="text/css" href="~/Content/css/DanhMuc/style.css">
    <link href="~/Content/plugins/dropdowntree.css" rel="stylesheet" />
}

<div class="main">
    <div class="panel-list-item col-sm-12">
        <div class="card">
            <div class="card-body create_thdt">
                <div class="header-create-update">
                    <span>Xem thông tin kế hoạch vốn ứng</span>
                </div>
                @*Thông tin nội dung*@
                <div class="form-group">
                    <h4 class="color-text-red">Thông tin nội dung:</h4>
                    <hr class='color-background-red' />
                    <div class="form-group row">
                        <div class="col-sm-3">
                            <label for="txt_DonViQuanLy">Đơn vị</label>
                            <p>@Model.sTenDonViQuanLy</p>
                        </div>
                        <div class="col-sm-3">
                            <label for="txt_SoQuyetDinh">Số kế hoạch</label>
                            <p>@Model.sSoQuyetDinh</p>
                        </div>
                        <div class="col-sm-3">
                            <label for="txt_NgayLap">Ngày lập</label>
                            <p>@Model.sNgayQuyetDinh</p>
                        </div>
                        <div class="col-sm-3">
                            <label for="iNamKeHoach">Năm kế hoạch</label>
                            <p>@Model.iNamKeHoach</p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-3">
                            <label for="iId_NguonVon">Nguồn vốn</label>
                            <p>@Model.sTenNguonVon</p>
                        </div>
                        <div class="col-sm-3">
                            <label for="iId_KeHoachVonUng">Kế hoạch vốn ứng đề xuất</label>
                            <p>@Model.sSoDeNghi_KHVUDX</p>
                        </div>
                    </div>
                </div>

                @*Thông tin chi tiết*@
                <br />
                <div class=" form-group row">
                    <div class="col-sm-12">
                        <div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-bordered" id="tblDanhSachDuAn">
                                        <thead>
                                            <tr>
                                                <th width="7%">Mã dự án</th>
                                                <th width="15%">Tên dự án</th>
                                                <th width="5%">LNS</th>
                                                <th width="3%">L</th>
                                                <th width="3%">K</th>
                                                <th width="4%">M</th>
                                                <th width="4%">TM</th>
                                                <th width="3%">TTM</th>
                                                <th width="3%">NG</th>
                                                <th width="8%" class="text-right">Tổng mức đầu tư</th>
                                                <th width="7%" class="text-right">Giá trị đề nghị</th>
                                                <th width="10%" class="text-right">Cấp phát tại kho bạc</th>
                                                <th width="10%" class="text-right">Cấp phát bằng lệnh chi</th>
                                                <th width="15%"> Ghi chú</th>
                                            </tr>
                                        </thead>
                                        <tbody id="ViewTable">
                                            @foreach (var item in Model.listChiTietDuAn)
            {
                                            <tr>
                                                <td class="text-center">@item.sMaDuAn</td>
                                                <td>@item.sTenDuAn</td>
                                                <td class="text-center">@item.sLNS</td>
                                                <td class="text-center">@item.sL</td>
                                                <td class="text-center">@item.sK</td>
                                                <td class="text-center">@item.sM</td>
                                                <td class="text-center">@item.sTM</td>
                                                <td class="text-center">@item.sTTM</td>
                                                <td class="text-center">@item.sNG</td>
                                                <td class="text-right">@item.sTongMucDauTu</td>
                                                <td class="text-right">@item.sGiaTriDeNghi</td>
                                                <td class="text-right">@item.sCapPhatTaiKhoBac</td>
                                                <td class="text-right">@item.sCapPhatBangLenhChi</td>
                                                <td>@item.sGhiChu</td>
                                            </tr>
            }
                                            </tbody>
                                        <tfoot>
                                            <tr>
                                                <th width="7%"></th>
                                                <th width="15%"></th>
                                                <th width="5%"></th>
                                                <th width="3%"></th>
                                                <th width="3%"></th>
                                                <th width="4%"></th>
                                                <th width="4%"></th>
                                                <th width="3%"></th>
                                                <th width="3%"></th>
                                                <th width="8%" id="txtSumTongMucDauTu" class="text-right">@Model.sSumTongMucDauTu</th>
                                                <th width="7%" class="text-right"></th>
                                                <th width="10%" id="txtSumCapPhatTaiKhoBac" class="text-right">@Model.sSumCapPhatTaiKhoBac</th>
                                                <th width="10%" id="txtSumCapPhatBangLenhChi" class="text-right">@Model.sSumCapPhatBangLenhChi</th>
                                                <th width="15%"></th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group text-center">
                    <button class="btn btn-back" onclick="location.href='@Url.Action("Index", "QLKeHoachVonUngDuocDuyet")'"><i class="fa fa-arrow-left" aria-hidden="true"></i><span>Quay lại</span></button>
                </div>
            </div>
        </div>
    </div>
</div>

@* Modal confirm *@
<div id="divModalConfirm">

</div>

<script src="~/Scripts/QLVonDauTu/NganSachQuocPhong/jsVDT_QLKeHoachVonUngDuocDuyet.js" type="text/javascript"></script>
<script src="/Scripts/sheet/jsNumber.js" type="text/javascript"></script>
<script src="~/Scripts/js/dropdowntree.js"></script>
@section Scripts{
    <script>
        var objDuocDuyet = {};
        var lstDuAn = [];
        var lstDetail = [];
        var lstMucLucNganSach = [];

        $(document).ready(function () {
            GetDataDropDownDonVi();
            GetDataDetailById();

            $("#dNgayQuyetDinh").change(function () {
                GetKeHoachVonUngDeXuat();
            });

            $("#iNamKeHoach").change(function () {
                GetKeHoachVonUngDeXuat();
            });
        });

    </script>
}