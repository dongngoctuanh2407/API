@model Viettel.Models.QLVonDauTu.VDTThongTriModel

@{
    ViewBag.Title = "Cập nhật thông tin thông tri thanh toán";
    Layout = "~/Views/Shared/_LayoutWebNew.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Content/css/DanhMuc/style.css">

<input type="hidden" id="iIDThongTriID" value="@Model.iID_ThongTriID" />
<input type="hidden" id="iID_DonViID" value="@Model.iID_DonViID" />
<input type="hidden" id="iNguonVon" value="@Model.sMaNguonVon" />
<input type="hidden" id="iLoaiCap" value="@ViewBag.iLoaiCap" />
<div class="main">
    <div class="panel-list-item col-sm-12">
        <div class="card">
            <div class="card-body create_thdt">
                <div class="form-group">
                    <h4 class="color-text-red">Thông tin thông tri:</h4>
                    <div style="float: right; margin-top: -37px">
                        <button class="btn btn-info" onclick="Loc()"><i class="fa fa-search" aria-hidden="true"></i>Lọc</button>
                        <button class="btn btn-danger" onclick="XoaTextThongTri()">Xóa</button>
                    </div>
                    <hr class='color-background-red' />
                    <div class="form-group row">
                        <div class="col-sm-3">
                            <label for="txtDonViQuanLy">Đơn vị quản lý</label>
                            <p class="label-sua">@Html.Raw(Model.sTenDonVi)</p>
                        </div>
                        <div class="col-sm-3">
                            <label for="ddlNguonVon">Nguồn vốn</label>
                            <p class="label-sua">@Html.Raw(Model.sTenNguonNganSach)</p>
                        </div>
                        <div class="col-sm-3">
                            <label for="sMaThongTri">Mã thông tri</label>
                            @Helpers.Required()
                            <input type="text" id="sMaThongTri" class="form-control requireInput" name="sMaThongTri" value="@Model.sMaThongTri" maxlength="50" autocomplete="off" />
                        </div>
                        <div class="col-sm-2">
                            <label for="sNgayLapGanNhat">Ngày lập gần nhất</label>
                            <p class="label-sua" id="dNgayLapGanNhat">@Html.Raw(Model.dNgayLapGanNhat.HasValue == false ? "" : Model.dNgayLapGanNhat.Value.ToString("dd/MM/yyyy"))</p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-3 no-padding">
                            <div class="col-sm-7">
                                <label for="dNgayThongTri">Ngày tạo thông tri</label>
                                <p class="label-sua" id="dNgayThongTri">@Html.Raw(Model.dNgayThongTri.HasValue == false ? "" : Model.dNgayThongTri.Value.ToString("dd/MM/yyyy"))</p>
                            </div>
                            <div class="col-sm-5">
                                <label for="sNamThongTri">Năm thực hiện</label>
                                <p class="label-sua" id="iNamThongTri">@Html.Raw(Model.iNamThongTri)</p>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <label for="sNguoiLap">Người lập thông tri</label>
                            @Helpers.Required()
                            <input type="text" id="sNguoiLap" class="form-control" name="sNguoiLap" value="@Model.sNguoiLap" maxlength="50" autocomplete="off" />
                        </div>
                        <div class="col-sm-3">
                            <label for="sTruongPhong">Trưởng phòng (Ban) tài chính</label>
                            <input type="text" id="sTruongPhong" class="form-control requireInput" name="sTruongPhong" value="@Model.sTruongPhong" maxlength="50" autocomplete="off" />
                        </div>
                        <div class="col-sm-3">
                            <label for="sThuTruongDonVi">Thủ trưởng đơn vị</label>
                            @Helpers.Required()
                            <input type="text" id="sThuTruongDonVi" class="form-control requireInput" name="sThuTruongDonVi" value="@Model.sThuTruongDonVi" maxlength="50" autocomplete="off" />
                        </div>
                    </div>

                    <div class="form-group row" id="divTab">
                        <ul class="nav nav-tabs">
                            <li id="li_capthanhtoankpqp" class="active"><a data-toggle="tab" href="#capthanhtoankpqp">Cấp thanh toán KPQP</a></li>
                            <li id="li_tamungkpqp"><a data-toggle="tab" href="#tamungkpqp">Tạm ứng KPQP</a></li>
                            <li id="li_thuungkpqp"><a data-toggle="tab" href="#thuungkpqp">Thu ứng KPQP</a></li>
                        </ul>

                        <div class="card-body tab-content">
                            <div id="capthanhtoankpqp" class="tab-pane fade in active">
                                <div id="tbl_capthanhtoankpqp"></div>
                            </div>
                            <div id="tamungkpqp" class="tab-pane fade in">
                                <div id="tbl_tamungkpqp"></div>
                            </div>
                            <div id="thuungkpqp" class="tab-pane fade in">
                                <div id="tbl_thuungkpqp"></div>
                            </div>
                        </div>

                    </div>

                    <div class="form-group text-center">
                        <button class="btn btn-default" style="width: 100%" onclick="Huy()"><i class="fa fa-ban" aria-hidden="true"></i><span>Hủy</span></button>
                        <button class="btn btn-primary" id="btnLuu" style="width: 100%" onclick="Luu()"><i class="fa fa-download" aria-hidden="true"></i><span>Lưu</span></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/QLVonDauTu/NganSachQuocPhong/jsVDT_SuaThongTriThanhToan.js" type="text/javascript"></script>
<script src="/Scripts/sheet/jsNumber.js" type="text/javascript"></script>
