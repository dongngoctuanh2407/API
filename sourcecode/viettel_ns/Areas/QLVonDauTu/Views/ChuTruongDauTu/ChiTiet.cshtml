@model Viettel.Models.QLVonDauTu.VDTChuTruongDauTuViewModel
@{
    ViewBag.Title = "Thông tin chi tiết phê duyệt chủ trương đầu tư";
    Layout = "~/Views/Shared/_LayoutWebNew.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Content/css/DanhMuc/style.css">
<style>
    #tblNguonVonDauTu, #tblHangMucChinh {
        display: block;
        overflow: auto;
        max-height: 250px;
    }

    #tblNguonVonDauTu thead, #tblHangMucChinh thead {
        position: sticky;
        top: 0;
        z-index: 1;
    }

    #tblNguonVonDauTu tfoot, #tblHangMucChinh tfoot {
        position: sticky;
        bottom: 0;
        z-index: 1;
    }

    #tblNguonVonDauTu tr, #tblHangMucChinh tr {
        display: table;
        table-layout: fixed;
        width: 100%;
    }
</style>
<div class="main">
    <input type="hidden" id="arr_HangMuc" value="@Json.Encode(Model.ListHangMuc)" />
    <input type="hidden" id="iIDChuTruongDauTuID" value="@Model.iID_ChuTruongDauTuID" />
    <div class="panel-list-item col-sm-12">
        <div class="card">
            <div class="card-body create_thdt">
                <div class="header-create-update">
                    <span>
                        @Html.Raw("Thông tin chi tiết phê duyệt chủ trương đầu tư")
                    </span>
                </div>
                @*Thông tin phê duyệt*@
                <div class="form-group">
                    <h4 class="color-text-red">Thông tin phê duyệt:</h4>
                    <hr class='color-background-red' />
                    <div class="form-group row">
                        <div class="col-sm-3">
                            <label for="sSoQuyetDinh">Số quyết định</label>
                            <p>@Html.Raw(Model.sSoQuyetDinh)</p>
                        </div>
                        <div class="col-sm-3">
                            <label for="dNgayQuyetDinh">Ngày phê duyệt</label>
                            <p>@Html.Raw(Model.dNgayQuyetDinh.HasValue ? Model.dNgayQuyetDinh.Value.ToString("dd/MM/yyyy") : string.Empty)</p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            <label for="sMoTa">Mô tả</label>
                            <p class="sMoTa">@Html.Raw(Model.sMoTa)</p>
                        </div>
                    </div>
                </div>

                @*Thông tin nội dung*@
                <div class="form-group">
                    <h4 class="color-text-red">Thông tin nội dung:</h4>
                    <hr class='color-background-red' />
                    <div class="form-group row">
                        <div class="col-sm-3">
                            <label for="txtDuAn">Dự án</label>
                            <p>@Html.Raw(Model.sTenDuAn)</p>
                        </div>
                        <div class="col-sm-3">
                            <label for="txtChuDauTu">Chủ đầu tư</label>
                            <p>@Html.Raw(Model.sChuDauTu)</p>
                        </div>
                        <div class="col-sm-3">
                            <label for="txtDonViQuanLy">Đơn vị quản lý</label>
                            <p>@Html.Raw(Model.sDonViQuanLy)</p>
                        </div>
                        <div class="col-sm-3">
                            <label for="txtNhomDuAn">Nhóm dự án</label>
                            <p>@Html.Raw(Model.sTenNhomDuAn)</p>
                        </div>
                    </div>
                    @*<div class="form-group row">
                <div class="col-sm-4">
                    <label for="txtDonViQuanLy">Đơn vị quản lý</label>
                    <p>@Html.Raw(Model.sDonViQuanLy)</p>
                </div>
                <div class="col-sm-4">
                    <label for="txtNhomDuAn">Nhóm dự án</label>
                    <p>@Html.Raw(Model.sTenNhomDuAn)</p>
                </div>
            </div>*@
                    <div class="form-group row">
                        <div class="col-sm-3">
                            <label for="txtThoiGianThucHien">Thời gian thực hiện</label>
                            <p>@Html.Raw(Model.sKhoiCong) - @Html.Raw(Model.sHoanThanh)</p>
                        </div>

                        @*<div class="col-sm-3">
                    <label for="txtLoaiCongTrinh">Loại công trình</label>
                    <p>@Html.Raw(Model.sTenLoaiCongTrinh)</p>
                </div>*@
                        <div class="col-sm-3">
                            <label for="txtPhanCapPheDuyet">Phân cấp phê duyệt</label>
                            <p>@Html.Raw(Model.sPhanCapDuAn)</p>
                        </div>

                        <div class="col-sm-3">
                            <label for="fTMDTDuKienPheDuyet">TMĐT phê duyệt dự kiến</label>
                            <p class="sotien">@Html.Raw(Model.fTMDTDuKienPheDuyet)</p>
                        </div>
                    </div>

                    @*<div class="form-group row">
                <div class="col-sm-4">
                    <label for="txtPhanCapPheDuyet">Phân cấp phê duyệt</label>
                    <p>@Html.Raw(Model.sPhanCapDuAn)</p>
                </div>

                <div class="col-sm-4">
                    <label for="fTMDTDuKienPheDuyet">TMĐT phê duyệt</label>
                    <p class="sotien">@Html.Raw(Model.fTMDTDuKienPheDuyet)</p>
                </div>
            </div>*@

                    <div class="form-group row">
                        <div class="col-md-12">
                            <label for="sDiaDiem">Địa điểm đầu tư</label>
                            <p class="sDiaDiem">@Html.Raw(Model.sDiaDiem)</p>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-12">
                            <label for="sMucTieu">Mục tiêu đầu tư</label>
                            <p class="sMucTieu">@Html.Raw(Model.sMucTieu)</p>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-12">
                            <label for="sQuyMo">Nội dung quy mô đầu tư</label>
                            <p class="sQuyMo">@Html.Raw(Model.sQuyMo)</p>
                        </div>
                    </div>
                </div>


                @*Nguồn vốn đầu tư*@
                <div class="form-group">
                    <h4 class="color-text-red">Nguồn vốn đầu tư:</h4>
                    <hr class='color-background-red' />
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <table class="table table-bordered" id="tblNguonVonDauTu">
                                <thead>
                                    <tr>
                                        <th width="50px">STT</th>
                                        <th>Tên nguồn vốn</th>
                                        @*<th width="10%" class="text-right">Giá trị tờ trình</th>
                                <th width="10%" class="text-right">Giá trị thẩm định</th>*@
                                        <th width="300px" class="text-right">Giá trị phê duyệt</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.listChuTruongDauTuNguonVon != null)
                                    {
                                        int index = 0;
                                        foreach (Viettel.Models.QLVonDauTu.VDTChuTruongDauTuNguonVonModel item in Model.listChuTruongDauTuNguonVon)
                                        {
                                            index++;
                                            <tr style='cursor: pointer;'>
                                                <td width="50px" class='r_STT'>@index</td>
                                                <td>@item.sTenNguonVon</td>
                                                @*<td align="right" class='r_GiaTriToTrinh sotien'>@item.fTienToTrinh</td>
                                        <td align="right" class='r_GiaTriThamDinh sotien'>@item.fTienThamDinh</td>*@
                                                <td align="right" width="300px" class='r_GiaTriPheDuyet sotien'>@item.fTienPheDuyet</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th width="50px"></th>
                                        <th>Tổng cộng</th>
                                        @*<th class="cpdt_tong_giatritotrinh text-right"></th>
                                <th class="cpdt_tong_gaitrithamdinh text-right"></th>*@
                                        <th width="300px" class="cpdt_tong_giatripheduyet text-right"></th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>

                @*Hạng mục dự án*@
                <div class="form-group">
                    <h4 class="color-text-red">Hạng mục dự án</h4>
                    <hr class='color-background-red' />
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <table class="table table-bordered" id="tblHangMucChinh">
                                <thead>
                                    <tr>
                                        <th width="50px">STT</th>
                                        <th>Tên hạng mục</th>
                                        <th>Loại công trình</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                @*Thông tin tài liệu đính kèm*@
                <div class="form-group">
                    <h4 class="color-text-red">Thông tin tài liệu đính kèm:</h4>
                    <hr class='color-background-red' />
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <table class="table table-bordered" id="tblThongTinTaiLieuDinhKem">
                                <thead>
                                    <tr>
                                        <th width="5%">STT</th>
                                        <th width="60%">Tài liệu</th>
                                        <th width="10%">Size</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody></tbody>

                            </table>
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <button class="btn btn-back" onclick="Huy()"><i class="fa fa-arrow-left" aria-hidden="true"></i><span>Quay lại</span></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
    <script src="~/Scripts/QLVonDauTu/ThongTinDuAn/ChuTruongDauTu/jsVDT_ChiTietChuTruongDauTu.js" type="text/javascript"></script>
    <script src="/Scripts/sheet/jsNumber.js" type="text/javascript"></script>
