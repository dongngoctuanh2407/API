                            <input type="hidden" id="iID_DuAnID" name="iID_DuAnID" value="@Model.iID_DuAnID" />
                            <input type="hidden" id="txt_MaDuAn" name="sMaDuAn" value="@Model.sMaDuAn" />
                        </div>
                        <div class="col-sm-3">
                            <label for="txtDonViQuanLy">Đơn vị quản lý</label>
