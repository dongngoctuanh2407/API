@using Viettel.Models.QLVonDauTu
@model VDTQLKhoiTaoDuAnViewModel
@{
    ViewBag.Title = "Chi tiết dự án chuyển tiếp khởi tạo";
    Layout = "~/Views/Shared/_LayoutWebNew.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Content/css/DanhMuc/style.css">
<link href="~/Content/plugins/dropdowntree.css" rel="stylesheet" />
<style>
    .table-parent th {
        text-align: center;
        border-top: 2px solid #ddd;
    }
</style>

<div class="main">
    <div class="panel-list-item col-sm-12">
        <input type="hidden" id="bIsEdit" value="0">
        <input type="hidden" id="drpNganhEdit">
        <input type="hidden" id="drpDuAnEdit">
        <input type="hidden" id="drpHopDongEdit">
        <input type="hidden" id="arrChiTiet" value="@Json.Encode(Model.lstKTChiTiet)" />
        <div class="card">
            <div class="card-body create_thdt">

                <div class="form-group">
                    <h4 class="color-text-red">Thông tin chung:</h4>
                    <hr class='color-background-red' />
                    <div class="form-group row">
                        <div class="col-sm-6">
                            <label for="txtiNamKhoiTao" class="">Năm khởi tạo</label>
                            <p>@Model.iNamKhoiTao</p>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <h4 class="color-text-red">Thông tin dự án:</h4>
                    <hr class='color-background-red' />
                    <div class="form-group row">
                        <div class="col-sm-6">
                            <label for="txt_TenDuAn">Tên dự án</label>
                            <p>@Model.sTenDuAn</p>
                        </div>
                        <div class="col-sm-3">
                            <label for="txt_MaDuAn">Mã dự án</label>
                            <p>@Model.sMaDuAn</p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-3">
                            <label for="txtChuDauTu">Chủ đầu tư</label>
                            <p>@Model.sTenChuDauTu</p>
                        </div>
                        <div class="col-sm-3">
                            <label for="txtLoaiCongTrinh">Loại công trình</label>
                            <p>@Model.sTenLoaiCongTrinh</p>
                        </div>
                        <div class="col-sm-3">
                            <label for="txtPhanCapPheDuyet">Phân cấp phê duyệt</label>
                            <p>@Model.sTenCapPheDuyet</p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-3">
                            <input type="hidden" id="iID_DuAnID" name="iID_DuAnID" value="">
                            <label for="txt_DonViQuanLy">Đơn vị quản lý</label>
                            <p>@Model.sTenDonViQuanLy</p>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group row" style="display: flex">
                                <div class="col-sm-6">
                                    <label for="txtThoiGianThucHienTuNam" style="white-space: nowrap;">Thời gian thực hiện:</label>
                                    <p>@Model.sKhoiCong - @Model.sKetThuc</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-2">
                            <label for="txtSoQuyetDinhCTDT">Số QĐĐT <span class="require">*</span></label>
                            <p>@Model.sSoQDDT</p>
                        </div>
                        <div class="col-sm-2">
                            <label for="dNgayPheDuyet">Ngày duyệt QĐĐT <span class="require">*</span></label>
                            <p>@Html.Raw(Model.dNgayDuyetQDDT.HasValue ? Model.dNgayDuyetQDDT.Value.ToString("dd/MM/yyyy") : string.Empty)</p>
                        </div>
                        <div class="col-sm-2">
                            <label for="txtCoQuanPheDuyet">Cơ quan phê duyệt QĐĐT <span class="require">*</span></label>
                            <p>@Model.sCoQuanPheDuyetQDDT</p>
                        </div>
                        <div class="col-sm-3">
                            <label for="txtNguoiKy">Người ký QĐĐT <span class="require">*</span></label>
                            <p>@Model.sNguoiKyQDDT</p>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-2">
                            <label for="txtSoQuyetDinhTKDT">Số quyết định TKDT</label>
                            <p>@Model.sSoTKDT</p>
                        </div>
                        <div class="col-sm-2">
                            <label for="dNgayPheDuyet">Ngày duyệt TKDT</label>
                            <p>@Html.Raw(Model.dNgayDuyetTKDT.HasValue ? Model.dNgayDuyetTKDT.Value.ToString("dd/MM/yyyy") : string.Empty)</p>
                        </div>
                        <div class="col-sm-2">
                            <label for="txtCoQuanPheDuyet">Cơ quan phê duyệt TKDT</label>
                            <p>@Model.sCoQuanPheDuyetTKDT</p>
                        </div>
                        <div class="col-sm-3">
                            <label for="txtNguoiKy">Người ký TKDT</label>
                            <p>@Model.sNguoiKyTKDT</p>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <h4 class="color-text-red">Thông tin vốn ứng ngoài chỉ tiêu:</h4>
                    <hr class='color-background-red' />
                    <div class="form-group row">
                        <div class="col-sm-2">
                            <label for="txtKHVonUng" class="">KH vốn ứng</label>
                            <p class="sotien">@Model.fKHVonUng</p>
                        </div>
                        <div class="col-sm-2">
                            <label for="txtVonUngDaCap" class="">Vốn ứng đã cấp</label>
                            <p class="sotien">@Model.fVonUngDaCap</p>
                        </div>
                        <div class="col-sm-2">
                            <label for="txtVonUngDaThuHoi" class="">Vốn ứng đã thu hồi</label>
                            <p class="sotien">@Model.fVonUngDaThuHoi</p>
                        </div>
                        <div class="col-sm-2">
                            <label for="txtGiaTriConPhaiUng" class="">Giá trị còn phải ứng</label>
                            <p class="sotien">@Model.fGiaTriConPhaiUng</p>
                        </div>
                    </div>
                </div>

                <div class="card-area">
                    <div id="ViewTable" style="overflow:scroll; height:300px;"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Scripts/QLVonDauTu/KhoiTao/jsVDT_ChiTiet_KhoiTaoThongTinDuAnChuyenTiep.js"></script>
    <script src="~/Scripts/sheet/jsNumber.js" type="text/javascript"></script>
    <script src="~/Scripts/js/dropdowntree.js"></script>
}