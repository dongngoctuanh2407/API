@model Viettel.Models.QLVonDauTu.VDT_DA_TT_HopDong_ViewModel
@using VIETTEL.Common
@{
    ViewBag.Title = "Nhập thông tin điều chỉnh Hợp Đồng";
    Layout = "~/Views/Shared/_LayoutWebNew.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Content/css/DanhMuc/style.css">

<input type="hidden" id="iIDHopDongID" value="@Model.iID_HopDongID" />
<input type="hidden" id="bIsGoc" value="@Html.Raw(Model.bIsGoc)" />
<input type="hidden" id="dNgayHopDongGoc" value="@Model.dNgayHopDong.ToString("dd/MM/yyyy")" />
<div class="main">
    <div class="panel-list-item col-sm-12">
        <div class="card" id="khongDieuChinh">
            <div class="card-body">
                @*Thông tin hợp đồng*@
                <div class="form-group">
                    <h4 class="color-text-red">Thông tin hợp đồng:</h4>
                    <hr class="color-background-red" />
                    <div class="form-group row">
                        <div class="col-sm-3">
                            <label for="sSoHopDong">Số hợp đồng</label>
                            @Helpers.Required()
                            <input type="text" id="sSoHopDong" class="form-control" value="" name="sSoHopDong" maxlength="100" autocomplete="off" />
                        </div>
                        <div class="col-sm-3">
                            <label for="dNgayHopDong">Ngày hợp đồng</label>
                            @Helpers.Required()
                            <div class='input-group date'>
                                <input type='text' class="form-control" value="" id="dNgayHopDong" name="dNgayHopDong" autocomplete="off" />
                                <span class="btn-default input-group-addon">
                                    <i class="fa fa-calendar" aria-hidden="true"></i>
                                </span>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <label for="iThoiGianThucHien">Thời gian thực hiện</label>
                            <input type='text' class="form-control sotien" value="" id="iThoiGianThucHien" onkeyup="ValidateNumberKeyUp(this);" onkeypress="return ValidateNumberKeyPress(this, event);" autocomplete="off" />
                        </div>
                    </div>
                </div>
                <br />
                @*Thông tin dự án*@
            <div class="form-group">
                <h4 class="color-text-red">Thông tin dự án:</h4>
                <hr class="color-background-red" />
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label>Dự án</label>
                        <p>@Html.Raw(Model.sMaDuAn + " - " + Model.sTenDuAn)</p>
                    </div>
                    <div class="col-sm-6">
                        <label>Đơn vị</label>
                        <p>@Html.Raw(Model.sTenDonViQL)</p>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label>Địa điểm thực hiện</label>
                        <p>@Html.Raw(Model.sDiaDiem)</p>
                    </div>
                    <div class="col-sm-6">
                        <label>Sự cần thiết phải đầu tư</label>
                        <p class="">@Html.Raw(Model.sSuCanThietDauTu)</p>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label>Mục tiêu đầu tư</label>
                        <p class="">@Html.Raw(Model.sMucTieu)</p>
                    </div>
                    <div class="col-sm-6">
                        <label>Diện tích sử dụng đất</label>
                        <p class="">@Html.Raw(Model.sDienTichSuDungDat)</p>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label for="">Nguồn gốc sử dụng đất</label>
                        <p class="">@Html.Raw(Model.sNguonGocSuDungDat)</p>
                    </div>
                    <div class="col-sm-6">
                        <label for="">Nội dung, quy mô đầu tư</label>
                        <p class="">@Html.Raw(Model.sQuyMo)</p>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-4">
                        <label for="">Thời gian thực hiện</label>
                        <p class="">@Html.Raw(Model.sKhoiCong + "-" + Model.sKetThuc)</p>
                    </div>
                    <div class="col-sm-4">
                        <label for="">Nhóm dự án</label>
                        <p class="">@Html.Raw(Model.sTenNhomDuAn)</p>
                    </div>
                    <div class="col-sm-4">
                        <label for="">Hình thức QLDA</label>
                        <p class="">@Html.Raw(Model.sTenHinhThucQuanLy)</p>
                    </div>
                </div>
            </div>
                @if (Model.iID_GoiThauID != null)
                {
                    <br />
                    @*Thông tin gói thầu*@
            <div class="form-group">
                <h4 class="color-text-red">Thông tin gói thầu:</h4>
                <hr class="color-background-red" />
                <div class="form-group row">
                        <div class="col-sm-3">
                            <label for="txtGoiThau">Gói thầu</label>
                            <p>@Html.Raw(Model.sTenGoiThau)</p>
                        </div>
                        <div class="col-sm-3">
                            <label for="txtGiaTriGoiThau">Giá trị gói thầu</label>
                            <p class="sotien">@Html.Raw(Model.fGiaTriGoiThau)</p>
                        </div>
                </div>
            </div>
                }

                <br />
                @*Điều chỉnh hợp đồng*@
            <div class="form-group">
                <h4 class="color-text-red">Điều chỉnh hợp đồng:</h4>
                <hr class="color-background-red" />
                <div class="form-group row">
                    <div class="col-sm-3">
                        <label for="txtGiaTriTruocDieuChinh">Giá trị trước điều chỉnh</label>
                        <p><label id="txtGiaTriTruocDieuChinh"></label></p>
                    </div>
                    <div class="col-sm-3">
                        <label for="txtLoaiDieuChinh">Loại điều chỉnh</label>
                        @Html.DropDownList("txtLoaiDieuChinh", (SelectList)(ViewBag.ListLoaiDieuChinh), new { @class = "form-control", @id = "txtLoaiDieuChinh" })
                    </div>
                    <div class="col-sm-3">
                        <label for="txtGiaTriDieuChinh">Giá trị điều chỉnh</label>
                        <input type="text" id="txtGiaTriDieuChinh" class="form-control" onkeyup="ValidateNumberKeyUp(this);" onkeypress="return ValidateNumberKeyPress(this, event);" value="" autocomplete="off" />
                    </div>
                    <div class="col-sm-3">
                        <label for="txtGiaTriSauDieuChinh">Giá trị sau điều chỉnh</label>
                        <input type="text" id="txtGiaTriSauDieuChinh" class="form-control" onkeyup="ValidateNumberKeyUp(this);" onkeypress="return ValidateNumberKeyPress(this, event);" value="" autocomplete="off" />
                    </div>
                </div>
            </div>
            </div>
            <div class="form-group text-center">
                <button class="btn btn-default" style="width: 100%" onclick="Huy()"><i class="fa fa-ban" aria-hidden="true"></i><span>Hủy</span></button>
                <button class="btn btn-primary" id="btnSave" style="width: 100%" onclick="Luu()"><i class="fa fa-download" aria-hidden="true"></i><span>Lưu</span></button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/QLVonDauTu/ThongTinDuAn/jsVDT_DieuChinhThongTinHopDong.js" type="text/javascript"></script>
<script src="/Scripts/sheet/jsNumber.js" type="text/javascript"></script>
