@using Viettel.Models.QLVonDauTu
@model VDTKHLuaChonNhaThauViewModel
@{
    ViewBag.Title = "Chi tiết kế hoạch lựa chọn nhà thầu";
    Layout = "~/Views/Shared/_LayoutWebNew.cshtml";
}

@section Styles{
    <link rel="stylesheet" type="text/css" href="~/Content/css/DanhMuc/style.css">
}
<style>
    #tblDanhSachDuToan, #tblDanhSachGoiThau, #tblDanhSachNguonVon, #tblChiPhiDauTu {
        display: block;
        overflow: auto;
        max-height: 320px;
    }

        #tblDanhSachDuToan thead, #tblDanhSachGoiThau thead, #tblDanhSachNguonVon thead, #tblChiPhiDauTu thead {
            position: sticky;
            top: 0;
            z-index: 1;
        }

        #tblDanhSachDuToan tr, #tblDanhSachGoiThau tr, #tblDanhSachNguonVon tr, #tblChiPhiDauTu tr {
            display: table;
            table-layout: fixed;
            width: 100%;
        }
</style>

<input type="hidden" id="iID_DuAnID" value="@Model.iID_DuAnID" />
<input type="hidden" id="iID_KHLuaChonNTID" value="@Model.Id" />
<div class="main">
    <div class="panel-list-item col-sm-12">
        <div class="card">
            <div class="card-body create_thdt">
                @*Thông tin nội dung*@
                <div class="header-create-update">
                    <span>
                        @Html.Raw("Chi tiết kế hoạch lựa chọn nhà thầu")
                    </span>
                </div>
                <div class="form-group">
                    <h4 class="color-text-red">Thông tin nội dung:</h4>
                    <hr class='color-background-red' />
                    <div class="form-group row">
                        <div class="col-sm-3">
                            <label for="sSoQuyetDinh">Số quyết định</label>
                            <p class="label-sua">@Html.Raw(Model.sSoQuyetDinh)</p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-3">
                            <label for="txt_DonViQuanLy">Đơn vị <span class="require">*</span></label>
                            <p class="label-sua">@Html.Raw(Model.sTenDonViQuanLy)</p>
                        </div>
                        <div class="col-sm-3">
                            <label for="dNgayQuyetDinh">Ngày quyết định</label>
                            <p class="label-sua">@Html.Raw(Model.sNgayQuyetDinh)</p>
                        </div>

                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-3">
                        <label for="txtsMoTa">Mô tả</label>
                        <p class="label-sua">@Html.Raw(Model.sMoTa)</p>
                    </div>
                    <div class="col-sm-3">
                        <label for="txtDuAn">Dự án</label>
                        <p class="label-sua">@Html.Raw(Model.sTenDuAn)</p>
                    </div>
                    <div class="col-sm-3">
                        <label for="txtChuDauTu">Chủ đầu tư</label>
                        <p class="label-sua">@Html.Raw(Model.sTenChuDauTu)</p>
                    </div>
                    <div class="col-sm-3">
                        <label for="fTongMucDauTuPheDuyet">TMĐT phê duyệt</label>
                        <p class="label-sua">@Html.Raw(Model.sTongMucDauTu)</p>
                    </div>
                </div>

                @*Danh sách dự toán*@
                <div class="form-group row">
                    @*left*@
                    <div class="col-sm-8">
                        <div class="form-group">
                            <h4 class="color-text-red">Danh sách dự toán</h4>
                            <hr class='color-background-red' />
                            <br />
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-bordered" id="tblDanhSachDuToan">
                                        <thead>
                                            <tr>
                                                <th width="50px">STT</th>
                                                <th>Số quyết định</th>
                                                <th width="150px">Ngày quyết định</th>
                                                <th>Đơn vị</th>
                                                <th>Tổng giá trị phê duyệt</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <h4 class="color-text-red">Danh sách gói thầu</h4>
                            <hr class='color-background-red' />
                            <br />
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-bordered" id="tblDanhSachGoiThau">
                                        <thead>
                                            <tr>
                                                <th width="50px">STT</th>
                                                <th width="200px">Tên gói thầu</th>
                                                <th>Giá gói thầu</th>
                                                <th>Hình thức chọn nhà thầu</th>
                                                <th>Phước thức lựa chọn nhà thầu</th>
                                                <th>Loại hợp đồng</th>
                                                <th>Thời gian thực hiện (số ngày)</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        </tbody>
                                        @*<tfoot>
                                                <tr>
                                                    <th></th>
                                                    <th colspan="2">Tổng cộng</th>
                                                    <th class="cpdt_tong_giatripheduyet text-right" id="id_tong_giatripheduyet_chiphi"></th>
                                                    <th></th>
                                                </tr>
                                            </tfoot>*@

                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    @*right*@
                    <div class="col-sm-4">
                        <div class="form-group">
                            <h4 class="color-text-red">Nguồn vốn, chi phí</h4>
                            <hr class='color-background-red' />
                            <br />
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-bordered" id="tblDanhSachNguonVon">
                                        <thead>
                                            <tr>
                                                <th>Nguồn vốn</th>
                                                <th>Giá trị phê duyệt</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12" id="tblDanhSachChiPhi">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Chi phí</th>
                                                <th>Giá trị phê duyệt</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group text-center">
                    <button class="btn btn-back" onclick="Huy()"><i class="fa fa-arrow-left" aria-hidden="true"></i><span>Quay lại</span></button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal thong tin chi tiet goi thau -->
<div class="modal fade" id="modalChiTietGoiThau" tabindex="-1" role="dialog" aria-labelledby="modalChiTietGoiThau" aria-hidden="true">
    <div class="modal-dialog" role="document" style="width:70%">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title text-bold text-center">Thông tin chi tiết gói thầu</h3>
            </div>
            <div class="modal-content" id="contentModalChiTietGoiThau" style="overflow: auto; padding: 0 20px 0 20px; max-height: 700px">
                <div class="form-group row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <h4 class="color-text-red">Thông tin nguồn vốn</h4>
                            <hr class='color-background-red' />
                            <br />
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-bordered" id="tblDanhSachNguonVonModal">
                                        <thead>
                                            <tr>
                                                <th><input type="checkbox" name="cbAll_NguonVon" class="cbAll_NguonVon" /></th>
                                                <th width="55%">Nguồn vốn</th>
                                                <th width="20%">Giá trị gói thầu</th>
                                                <th width="20%">Giá trị phê duyệt</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                        <tfoot>
                                            <tr>
                                                <th colspan="2">Tổng nguồn vốn</th>
                                                <th class="rTongNguonVon" style="text-align: right"></th>
                                                <th></th>
                                            </tr>
                                            <tr>
                                                <th colspan="2">Còn lại</th>
                                                <th class="rConLai" style="text-align: right"></th>
                                                <th></th>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>

                        </div>
                        <div class="form-group">
                            <h4 class="color-text-red">Thông tin chi phí</h4>
                            <hr class='color-background-red' />
                            <br />
                            <div class="row">
                                <div class="col-sm-12" id="tblDanhSachChiPhiModal">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th><input type="checkbox" name="cbAll_ChiPhi" /></th>
                                                <th width="55%">Chi phí</th>
                                                <th width="20%">Giá trị gói thầu</th>
                                                <th width="20%">Giá trị phê duyệt</th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <h4 class="color-text-red">Thông tin hạng mục</h4>
                        <hr class='color-background-red' />
                        <br />
                        <div class="row">
                            <div class="col-sm-12" id="tblDanhSachHangMuc">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th><input type="checkbox" name="cbAll_HangMuc" /></th>
                                            <th width="70%">Hạng mục</th>
                                            <th width="25%">Giá trị phê duyệt</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="text-center">
                    <button class="btn btn-default" data-dismiss="modal"><i class="fa fa-ban" aria-hidden="true"></i><span>Đóng</span></button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/QLVonDauTu/ThongTinDuAn/KHLCNhaThau/jsVDT_ChiTiet_KHLuaChonNhaThau.js" type="text/javascript"></script>
<script src="/Scripts/sheet/jsNumber.js" type="text/javascript"></script>

<style>
    .create_thdt h4 {
        font-size: 17px;
    }

    .r_STT {
        text-align: center;
    }

    .table-bordered tbody {
        overflow: auto;
    }
</style>
