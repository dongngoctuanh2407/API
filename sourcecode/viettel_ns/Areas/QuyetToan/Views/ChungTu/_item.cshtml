@model ChungTuEditViewModel

@Html.HiddenFor(x => x.iLoai)
@Html.HiddenFor(x => x.iSoChungTu)

<div class="form-group">
    <div class="col-sm-2">
        @Helpers.Required()
        @Html.LabelFor(x => x.iSoChungTu, new { @class = "control-label-r" })
    </div>
    <div class="col-sm-10">
        @*@Html.TextBoxFor(m => m.iSoChungTu, new { @class = "form-control-static" })*@
        <span class="form-control-static text-danger"><strong>@Model.iSoChungTu</strong></span>
    </div>
</div>

<div class="form-group">
    <div class="col-sm-2">
        @Html.LabelFor(x => x.iID_MaDonVi, new { @class = "control-label" })
    </div>
    <div class="col-sm-4">
        @Html.DropDownListFor(x => x.iID_MaDonVi, (IEnumerable<SelectListItem>)ViewBag.DonViList, null, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.iID_MaDonVi)
    </div>
</div>


<div class="form-group">
    <div class="col-sm-2">
        @Html.LabelFor(x => x.sDSLNS, new { @class = "control-label" })
    </div>
    <div class="col-sm-4">
        @Html.DropDownListFor(x => x.sDSLNS, (IEnumerable<SelectListItem>)ViewBag.LNSList, null, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.sDSLNS)
    </div>
</div>


<div class="form-group">
    <div class="col-sm-2">
        @Html.LabelFor(x => x.iThang_Quy, new { @class = "control-label" })
    </div>
    <div class="col-sm-4">
        @Html.DropDownListFor(x => x.iThang_Quy, (IEnumerable<SelectListItem>)ViewBag.QuyList, null, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.iThang_Quy)
    </div>
</div>

<div class="form-group">
    <div class="col-xs-4 col-sm-2">
        @Helpers.Required()
        @Html.LabelFor(x => x.dNgayChungTu, new { @class = "control-label-r" })
        @*@Html.ValidationMessageFor(m => m.dNgayChungTu)*@
    </div>
    <div class="col-xs-8 col-sm-4">
        @Html.TextBoxFor(x => x.dNgayChungTu, "{0:dd/MM/yyyy}", new { @class = "form-control date", format = "dd/mm/yyyy" })
    </div>
</div>

<div class="form-group">


    <div class="col-xs-4  col-sm-2">
        @Html.LabelFor(x => x.sNoiDung, new { @class = "control-label" })
    </div>

    <div class="col-xs-8 col-sm-10">
        @Html.TextAreaFor(x => x.sNoiDung, new { @class = "form-control" })
    </div>

</div>

