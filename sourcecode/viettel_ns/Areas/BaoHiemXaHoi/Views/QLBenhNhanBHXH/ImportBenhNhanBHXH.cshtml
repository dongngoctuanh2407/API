@model Viettel.Models.BaoHiemXaHoi.TepBenhNhanBHXHPagingViewModel
@{
    ViewBag.Title = "Quản lý bệnh nhân điều trị Bảo hiểm xã hội";
    Layout = "~/Views/Shared/_LayoutWebNew.cshtml";
}


@section Styles{
    <link rel="stylesheet" type="text/css" href="~/Content/css/DanhMuc/style.css">
}

<div class="card">
    <div class="card-search" id="cardSearch">
        <div class="form-group header-card">
            <label class="label-title-card color-text-red">Import danh sách bệnh nhân điều trị BHXH</label>
            <i class="fa fa-chevron-down fa-1x close-card-condition" aria-hidden="true" data-toggle="collapse" data-target="#card-condition" aria-expanded="true" aria-controls="card-condition"></i>
        </div>
        <div class="card-condition collapse in" id="card-condition">
            <div class="form-group">
                <div class="row" style="margin: 0px">
                    <div class="col-sm-1">
                        <label for="txtThang">Tháng</label>
                        @Helpers.Required()
                        <select class="form-control required" name="iThang" id="iThang">
                            <option value="">--Chọn--</option>
                            <option value="1">Tháng 1</option>
                            <option value="2">Tháng 2</option>
                            <option value="3">Tháng 3</option>
                            <option value="4">Tháng 4</option>
                            <option value="5">Tháng 5</option>
                            <option value="6">Tháng 6</option>
                            <option value="7">Tháng 7</option>
                            <option value="8">Tháng 8</option>
                            <option value="9">Tháng 9</option>
                            <option value="10">Tháng 10</option>
                            <option value="11">Tháng 11</option>
                            <option value="12">Tháng 12</option>
                        </select>
                    </div>
                    <div class="col-sm-2">
                        <label for="txtFilePath">Chọn file XML</label>
                        @Helpers.Required()
                        <input type="file" id="FileUpload" name="FileUpload" accept=".xml"/>
                    </div>
                    <div class="col-sm-5">
                        <label for="txtMoTa">Mô tả</label>
                        <textarea id="sMoTa" name="sMoTa" class="form-control"></textarea>
                    </div>
                    <div class="col-sm-3 btn-search-group">
                        <button class="btn btn-default" onclick="AddFile()"><i class="fa fa-file" aria-hidden="true"></i>Thêm File</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="main">
    <div class="panel-list-item col-sm-12">
        <div class="card">
            <div class="card-body" id="lstDataView">
                @Html.Partial("_listFile", Model)
            </div>

            <div class="form-group text-center hidden" id="btnFooterFile">
                <button class="btn btn-default" onclick="Cancel()"><i class="fa fa-ban" aria-hidden="true"></i><span>Hủy</span></button>
                <button class="btn btn-primary" onclick="SubmitFile()"><i class="fa fa-download" aria-hidden="true"></i><span>Xử lý</span></button>
            </div>

            <div class="form-group text-center hidden" id="btnFooterSave">
                <button class="btn btn-default" style="width: 100%" onclick="GoBack()"><i class="fa fa-ban" aria-hidden="true"></i><span>Hủy</span></button>
                <button class="btn btn-primary" id="btnLuu" style="width: 100%" onclick="SaveData()"><i class="fa fa-download" aria-hidden="true"></i><span>Lưu</span></button>
            </div>
        </div>
    </div>
</div>

@* Modal confirm *@
<div id="divModalConfirm">

</div>

@section Scripts{
    @*@Html.Partial("_SheetScript")*@
    <script src="~/Scripts/QLBaoHiemXaHoi/jsQLBenhNhanBHXH_File.js"></script>

    <script>
        var _paging = {};
        $(document).ready(function () {
            _paging.CurrentPage = @Model._paging.CurrentPage ;
            _paging.ItemsPerPage = @Model._paging.ItemsPerPage ;
        });
    </script>
}

<style>
    #danhsachBenhNhan .error {
        background-color: #FFA500;
    }
</style>

