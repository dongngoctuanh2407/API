@model rptNCSKT_IK06ViewModel
@{

}
<div class="panel panel-danger">
    <div class="panel-heading">
        <span class="text-uppercase font-l">Báo cáo tổng hợp chênh lệch nhu cầu đơn vị và số kiểm tra của bql năm @PhienLamViec.NamLamViec</span>
    </div>
    <div class="panel-body">
        <div class="container"> 
            <div class="row">
                <div class="col-xs-6">
                    <form action="" class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-sm-4">Phòng ban:</label>
                            <div class="col-sm-8">
                                @if (Model.PhongBanList == null || Model.PhongBanList.Count() <= 2)
                                {
                                    <input type="text" readonly value="@PhienLamViec.sTenPhongBanFull" class="form-control" />
                                    <input id="id_phongban" type="text" value="@PhienLamViec.iID_MaPhongBan" class="form-control hide" />
                                }
                                else
                                {

                                    @Html.DropDownList("id_phongban", Model.PhongBanList, new { @class = "form-control", onchange = "change()" })
                                }
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-4">Đơn vị:</label>
                            <div class="col-sm-8">                                
                                @Html.DropDownList("id_donvi", Model.DonViList, new { @class = "form-control"})
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-4">Chuyên ngành:</label>
                            <div class="col-sm-8">
                                @Html.DropDownList("nganh", Model.NganhList, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-4">Loại số liệu:</label>
                            <div id="loai" class="col-sm-8">
                                <div class="radio">
                                    <input type="radio" name="loai" value="1" id="loai-1" checked />
                                    <label for="loai-1">Nhu cầu đơn vị</label>
                                </div>
                                <div class="radio">
                                    <input type="radio" name="loai" value="2" id="loai-2" />
                                    <label for="loai-2">Quyết toán 2019</label>
                                </div>
                            </div>
                        </div> 
                        <div class="form-group">
                            <label class="control-label col-sm-4">Loại báo cáo:</label>
                            <div id="loaiBaoCao" class="col-sm-8">
                                <div class="radio">
                                    <input type="radio" name="loaiBaoCao" value="1" id="loaiBaoCao-1" checked />
                                    <label for="loaiBaoCao-1">Tổng hợp (Bao gồm bệnh viện)</label>
                                </div>
                                <div class="radio">
                                    <input type="radio" name="loaiBaoCao" value="2" id="loaiBaoCao-2" />
                                    <label for="loaiBaoCao-2">Tổng hợp (Không gồm bệnh viện)</label>
                                </div>
                                <div class="radio">
                                    <input type="radio" name="loaiBaoCao" value="3" id="loaiBaoCao-3" />
                                    <label for="loaiBaoCao-3">Tăng giảm (Bao gồm bệnh viện)</label>
                                </div>
                                <div class="radio">
                                    <input type="radio" name="loaiBaoCao" value="4" id="loaiBaoCao-4" />
                                    <label for="loaiBaoCao-4">Tăng giảm (Không gồm bệnh viện)</label>
                                </div>
                            </div>
                        </div>                        
                    </form>
                </div>                
            </div>          
            <div class="row text-center">
                <a class="btn-mvc btn-mvc-green btn-print" data-ext="pdf"><i class="fa fa-print"></i> In báo cáo</a>
                <a class="btn-mvc btn-mvc-green btn-print" data-ext="xls"><i class="fa fa-file-excel"></i>Xuất excel</a>
                <a class="btn-mvc" id="btn-cancel" href="@Url.Action("Index", "Reports" , new {area="SKT", loai=4})">Quay lại</a>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    change();

    function change() {
        var phongban = $("#id_phongban").val();

        var url = '@Url.Action("Ds_DonVi")' +
                   "/?phongban=" + phongban;

        console.log(url);
        $("#id_donvi").empty();
        $.getJSON(url, function (data) {
            $("#id_donvi").append(data);
        });
    }

    $(".btn-print").click(function () {

        var links = [];
        var nganh = $("#nganh").val();
        var donvi = $("#id_donvi").val();
        var phongban = $("#id_phongban").val();
        var loaiBC = $("#loaiBaoCao input[type='radio']:checked").val();
        var loai = $("#loai input[type='radio']:checked").val();

        var ext = $(this).data("ext");

        var url = unescape('@Url.Action("Print")' +
                    "?ext=" + ext +
                    "&nganh=" + nganh +
                    "&phongban=" + phongban +
                    "&loai=" + loaiBC +
                    "&loaiBC=" + loai +
                    "&donvi=" + donvi);

        openNewTab(url);

    });

</script>
