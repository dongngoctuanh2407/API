@model rptKiem_CauHinhNCMLNSViewModel
@{

}
<div class="panel panel-danger">
    <div class="panel-heading">
        <span class="text-uppercase font-l">Báo cáo dự toán nhu cầu ngân sách năm @PhienLamViec.iNamLamViec</span>
    </div>
    <div class="panel-body">
        <div class="container">
            <div class="row">
                <div class="col-xs-6">
                    <h6><strong class="text-uppercase">Đơn vị:</strong></h6>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6">
                    <div id="iID_MaDonVi" class="ls-box" data-check="first-only">
                        @Html.Partial("_CheckboxList", new ChecklistModel("DonVi", Model.DonViList))
                    </div>
                </div>
            </div>
            <hr />
            <div class="row text-center">
                <a class="btn-mvc btn-mvc-green btn-print" data-ext="pdf"><i class="fa fa-print"></i> In báo cáo</a>
                <a class="btn-mvc btn-mvc-green btn-print" data-ext="xls"><i class="fa fa-file-excel"></i>Xuất excel</a>
                <a class="btn-mvc" id="btn-cancel" href="@Url.Action("Index", "Reports", new {area="SKT", loai =4})">Quay lại</a>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">


    $(".btn-print").click(function () {

        var links = [];

        var ext = $(this).data("ext");

        $("input:checkbox[check-group='DonVi']").each(function () {
            if (this.checked) {
                var item = this.value;
                var url = unescape('@Url.Action("Print")' +
                    "?ext=" + ext +
                    "&id_donvi=" + item);

                links.push(url);

                console.log(url);
            }
        });

        openLinks(links);        

    });

</script>
