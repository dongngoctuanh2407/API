@model rptSKT_BCTHNTViewModel
@{

}
<div class="panel panel-danger">
    <div class="panel-heading">
        <span class="text-uppercase font-l">Báo cáo tổng hợp dự toán đầu năm ngân sách @(PhienLamViec.NamLamViec - 1)</span>
    </div>
    <div class="panel-body">
        <div class="container"> 
            <div class="row">
                <div class="col-xs-6">
                    <form action="" class="form-horizontal">
                        <div class="form-group">
                            <label class="control-label col-sm-4">Chuyên ngành:</label>
                            <div class="col-sm-8">
                                @Html.DropDownList("nganh", Model.NganhList, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-4">Loại báo cáo:</label>
                            <div id="loaiBaoCao" class="col-sm-8">
                                <div class="radio">
                                    <input type="radio" name="loaiBaoCao" value="1" id="loaiBaoCao-1" checked/>
                                    <label for="loaiBaoCao-1">Tổng hợp số liệu (DT 2019 | Bql | Tăng | Giảm)</label>
                                </div>      
                                <div class="radio">
                                    <input type="radio" name="loaiBaoCao" value="2" id="loaiBaoCao-2" />
                                    <label for="loaiBaoCao-2">Tổng hợp số dự toán đầu năm 2019 và số dự toán 2020</label>
                                </div>
                                <div class="radio">
                                    <input type="radio" name="loaiBaoCao" value="3" id="loaiBaoCao-3" />
                                    <label for="loaiBaoCao-3">Tổng hợp số dự toán 2020 theo (Đơn vị | Bql | B2)</label>
                                </div>
                                <div class="radio">
                                    <input type="radio" name="loaiBaoCao" value="4" id="loaiBaoCao-4" />
                                    <label for="loaiBaoCao-4">Tổng hợp số dự toán 2020 theo (Bql | B2)</label>
                                </div>   
                                <div class="radio">
                                    <input type="radio" name="loaiBaoCao" value="5" id="loaiBaoCao-4" />
                                    <label for="loaiBaoCao-4">Tổng hợp số dự toán 2020 theo Bql (TQ | B6 | B7 | B8 | B10)</label>
                                </div>                                                          
                            </div>
                        </div>
                    </form>
                </div>                
            </div>          
            <div class="row text-center">
                <a class="btn-mvc btn-mvc-green btn-print" data-ext="pdf"><i class="fa fa-print"></i> In báo cáo</a>
                <a class="btn-mvc btn-mvc-green btn-print" data-ext="xls"><i class="fa fa-file-excel"></i>Xuất excel</a>
                <a class="btn-mvc" id="btn-cancel" href="@Url.Action("Index", "Reports" , new {area="SKT", loai=4})">Quay lại</a>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">

    $(".btn-print").click(function () {

        var links = [];
        var loaiBC = $("#loaiBaoCao input[type='radio']:checked").val();
        var nganh = $("#nganh").val();

        var ext = $(this).data("ext");

        var url = unescape('@Url.Action("Print")' +
                    "?ext=" + ext +
                    "&nganh=" + nganh +
                    "&loai=" + loaiBC);

        openNewTab(url);

    });

</script>
