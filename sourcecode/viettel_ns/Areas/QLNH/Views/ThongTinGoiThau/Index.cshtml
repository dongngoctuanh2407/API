@model Viettel.Models.QLNH.NHDAGoiThauViewModel
@{
    ViewBag.Title = "Thông tin gói thầu";
    Layout = "~/Views/Shared/_LayoutWebNew.cshtml";
}

@section Styles{
    <link rel="stylesheet" type="text/css" href="~/Content/css/DanhMuc/style.css">
}

<div class="main">
    <div class="panel-list-item col-sm-12">
        <div class="card">
            <div class="card-body" id="lstDataView">
                @Html.Partial("_list", Model)
            </div>
        </div>
    </div>
</div>

@*Modal*@
<div class="modal fade" id="modalTTGoiThau" role="dialog" aria-labelledby="modalGoiThauLabel" aria-hidden="true">
    <div class="modal-dialog" role="document" style="width:80%">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title text-bold text-left" id="modalGoiThauLabel"></h3>
            </div>
            <div id="contentModalTTGoiThau"></div>
        </div>
    </div>
</div>

@*Modal confirm*@
<div id="divModalConfirm">

</div>

@section Scripts{
    <script src="~/Scripts/QLNH/DuAnHopDong/ThongTinGoiThau/jsNH_ThongTinGoiThau.js"></script>
    <script src="~/Scripts/jsNumber.js" type="text/javascript"></script>
    <script>
        var _paging = {};
        var sUrlListView = "";
        $(document).ready(function () {
            sUrlListView = '@Url.Action("TimKiem", "ThongTinGoiThau")';
            _paging.CurrentPage = @Model._paging.CurrentPage;
            _paging.ItemsPerPage = @Model._paging.ItemsPerPage;
        });
    </script>
}