@using Viettel.Models.QLNH
@using DomainModel
@using System.Globalization;
@model NH_DA_GoiThauModel

@{
    ViewBag.Title = "Chi tiết thông tin gói thầu";
    Layout = "~/Views/Shared/_LayoutWebNew.cshtml";
}

@section Styles{
    <link rel="stylesheet" type="text/css" href="~/Content/css/DanhMuc/style.css">
}

<div class="main">
    <div class="panel-list-item col-sm-12">
        <div class="card">
            <div class="card-body">
                <div class="header-create-update">
                    <span>@Html.Raw("Chi tiết thông tin gói thầu")</span>
                </div>
                <div class="form-group">
                    <h4 class="color-text-red">Thông tin căn cứ:</h4>
                    <hr class="color-background-red" />
                    <div class="form-group row">
                        <div class="col-sm-3">
                            <label>Đơn vị quản lý</label>
                            <div>@Html.Raw(Html.Encode(Model.sTenDonVi))</div>
                        </div>
                        <div class="col-sm-3">
                            <label>Tên chương trình</label>
                            <div>@Html.Raw(Html.Encode(Model.sTenChuongTrinh))</div>
                        </div>
                        <div class="col-sm-3">
                            <label>Loại</label>
                            <div>@Model.sLoai</div>
                        </div>
                        <div class="col-sm-3">
                            @if (Model.iPhanLoai == 1 || Model.iPhanLoai == 3)
                            {
                                <label>Tên dự án</label>
                                <div>@Html.Raw(Html.Encode(Model.sTenDuAn))</div>
                            }
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-3">
                            <label>Số quyết định @Model.sLabelByLoai[0]</label>
                            <div>@Html.Raw(Html.Encode(Model.sValueByLoai[0]))</div>
                        </div>
                        <div class="col-sm-3">
                            <label>Ngày quyết định @Model.sLabelByLoai[0]</label>
                            <div>@Html.Raw(Html.Encode(Model.sValueByLoai[1]))</div>
                        </div>
                        <div class="col-sm-3">
                            <label>Số quyết định @Model.sLabelByLoai[1]</label>
                            <div>@Html.Raw(Html.Encode(Model.sValueByLoai[2]))</div>
                        </div>
                        <div class="col-sm-3">
                            <label>Ngày quyết định @Model.sLabelByLoai[1]</label>
                            <div>@Html.Raw(Html.Encode(Model.sValueByLoai[3]))</div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <h4 class="color-text-red">Thông tin gói thầu:</h4>
                    <hr class="color-background-red" />
                    <div class="form-group row">
                        <div class="col-sm-3">
                            <label>Tên gói thầu</label>
                            <div>@Html.Raw(Html.Encode(Model.sTenGoiThau))</div>
                        </div>
                        <div class="col-sm-3">
                            <label>Thời gian thực hiện (ngày)</label>
                            <div>@Html.Raw(Html.Encode(Model.iThoiGianThucHien))</div>
                        </div>
                        <div class="col-sm-3">
                            <label>@Model.sLabelNhaThau</label>
                            <div>@Html.Raw(Html.Encode(Model.sTenNhaThau))</div>
                        </div>
                        <div class="col-sm-3">
                            <label>Thanh toán bằng</label>
                            <div>@Html.Raw(Html.Encode(Model.sMaTienTe))</div>
                        </div>
                    </div>
                    @{
                        if (Model.iPhanLoai == 1 || Model.iPhanLoai == 2)
                        {
                            <div class="form-group row">
                                <div class="col-sm-3">
                                    <label>Hình thức chọn nhà thầu</label>
                                    <div>@Html.Raw(Html.Encode(Model.sTenHinhThuc))</div>
                                </div>
                                <div class="col-sm-3">
                                    <label>Phương thức chọn nhà thầu</label>
                                    <div>@Html.Raw(Html.Encode(Model.sTenPhuongThuc))</div>
                                </div>
                                <div class="col-sm-3">
                                    <label>Loại hợp đồng</label>
                                    <div>@Html.Raw(Html.Encode(Model.sTenLoaiHopDong))</div>
                                </div>
                            </div>
                        }
                    }
                </div>
                <div class="form-group">
                    <h4 class="color-text-red">Giá trị gói thầu:</h4>
                    <hr class="color-background-red" />
                    <div class="form-group row">
                        <div class="col-sm-3">
                            <label>Tỉ giá</label>
                            <div>@Html.Raw(Html.Encode(Model.sTenTiGia))</div>
                        </div>
                        <div class="col-sm-3">
                            <label for="slbMaNgoaiTeKhac">Mã ngoại tệ khác</label>
                            <div>@Html.Raw(Html.Encode(Model.sMaNgoaiTeKhac))</div>
                        </div>
                        <div class="col-sm-3">&nbsp;</div>
                        <div class="col-sm-3">&nbsp;</div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-3">
                            <label>Giá trị trúng thầu (USD)</label>
                            <div>@CommonFunction.DinhDangSo((Model.fGiaTriUSD.HasValue ? Model.fGiaTriUSD.Value.ToString(CultureInfo.InvariantCulture) : string.Empty), 2)</div>
                        </div>
                        <div class="col-sm-3">
                            <label>Giá trị trúng thầu (VND)</label>
                            <div>@CommonFunction.DinhDangSo((Model.fGiaTriVND.HasValue ? Math.Round(Model.fGiaTriVND.Value).ToString(CultureInfo.InvariantCulture) : string.Empty), 0)</div>
                        </div>
                        <div class="col-sm-3">
                            <label>Giá trị trúng thầu (EUR)</label>
                            <div>@CommonFunction.DinhDangSo((Model.fGiaTriEUR.HasValue ? Model.fGiaTriEUR.Value.ToString(CultureInfo.InvariantCulture) : string.Empty), 2)</div>
                        </div>
                        <div class="col-sm-3">
                            <label>Giá trị hợp đồng (<label id="iDTenNgoaiTeKhac">Ngoại tệ khác</label>)</label>
                            <div>@CommonFunction.DinhDangSo((Model.fGiaTriNgoaiTeKhac.HasValue ? Model.fGiaTriNgoaiTeKhac.Value.ToString(CultureInfo.InvariantCulture) : string.Empty), 2)</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group text-center">
                <button class="btn btn-back" onclick="Cancel()"><i class="fa fa-arrow-left" aria-hidden="true"></i><span>Quay lại</span></button>
            </div>
        </div>
    </div>
</div>
<script>
    function Cancel() {
        window.location.href = "/QLNH/ThongTinGoiThau";
    }
</script>


