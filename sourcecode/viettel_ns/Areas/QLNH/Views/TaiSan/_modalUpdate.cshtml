@using Viettel.Models.QLNH
@using Viettel.Domain.DomainModel
@model QuyetToan_ChungTuTaiSanModel

<div class="modal-body">
    <div class="form-group">
        <input type="hidden" id="idChungTu" value="@Model.ChungTuModel.ID">
        <input type="hidden" id="arrTaiSan" value="@Json.Encode(@Model.ListTaiSan.Items)" />
        <div>
            <h4 class="color-text-red">Thông tin chứng từ:</h4>
            <hr class="color-background-red">
        </div>
        <div class="form-group row">
            <div class="col-sm-4">
                <label for="txtTenChungTu">Tên chứng từ</label>
                <input type="text" class="form-control" id="txtsTenChungTu" value="@Html.Raw(Model.ChungTuModel.sTenChungTu)" />
            </div>
            <div class="col-sm-4">
                <label for="txtSoChungTu">Số chứng từ</label>
                @Helpers.Required()
                <input type="text" class="form-control" id="txtsSoChungTu" value="@Html.Raw(Model.ChungTuModel.sSoChungTu)" />
            </div>
            <div class="col-sm-4">
                <label for="dNgayChungTu">Ngày chứng từ</label>
                <div class='input-group date'>
                    <input type="text" class="form-control" id="txtdNgayChungTu" value="@{
                                                                if (Model.ChungTuModel.dNgayChungTu.HasValue)
                                                                {
                                                                    @Html.Raw(Model.ChungTuModel.dNgayChungTu.Value.ToString("dd/MM/yyyy"));
                                                                }
                                                                else
                                                                {
                                                                    @Html.Raw(Model.ChungTuModel.dNgayChungTu)
                                                                }
                                                                }" autocomplete="off" />
                    <span class="btn-default input-group-addon">
                        <i class="fa fa-calendar" aria-hidden="true"></i>
                    </span>
                </div>

            </div>
        </div>
    </div>

    <div>
        <div>
            <h4 class="color-text-red">Thông tin tài sản:</h4>
            <hr class="color-background-red">
        </div>
        <div class="row" style="margin-right: 0px">
            <label for="btn">&nbsp;</label>
            <div class="input-group pull-right">
                <div class="input-group-append">
                    <button class="btn btn-primary pull-right" style="margin-right:10px;" onclick="ThemMoi()"><i class="fa fa-plus" aria-hidden="true"></i>Thêm mới</button>
                </div>
            </div>
        </div>
        <div style=" overflow-x : auto">
            <table class="table table-bordered " id="tbListTaiSans">
                <thead>
                <th style="white-space: nowrap">STT</th>
                <th style="white-space: nowrap">Mã tài sản</th>
                <th style="white-space: nowrap">Tên tài sản</th>
                <th style="white-space: nowrap">Loại tài sản</th>
                <th style="white-space: nowrap">Mô tả</th>
                <th style="white-space: nowrap">Ngày bắt đầu sử dụng</th>
                <th style="white-space: nowrap">Tình trạng sử dụng</th>
                <th style="white-space: nowrap">Số lượng</th>
                <th style="white-space: nowrap">Đơn vị tính</th>
                <th style="white-space: nowrap">Nguyên giá</th>
                <th style="white-space: nowrap">Trạng thái sử dụng</th>
                <th style="white-space: nowrap">Đơn vị sử dụng</th>
                <th style="white-space: nowrap">Thuộc dự án</th>
                <th style="white-space: nowrap">Thuộc hợp đồng</th>
                <th style="white-space: nowrap">Thao tác</th>
                </thead>
                <tbody class="table-update-modal">
                </tbody>
            </table>
        </div>
    </div>
    <div class="modal-footer">
        <div class="text-center">
            <button class="btn btn-default" onclick="back()"><i class="fa fa-ban" aria-hidden="true"></i><span>Hủy</span></button>
            <button class="btn btn-primary" onclick="SaveUpdate()"><i class="fa fa-download" aria-hidden="true"></i><span>Lưu</span></button>
        </div>
    </div>
    <script>
        Event();
    </script>
    <style>
        .input-calendar {
            padding: 0px
        }
        .tablethin {
            min-width: 150px !important;
        }
    </style>
