@model Viettel.Models.KeHoachChiTietBQP.NH_KHChiTietBQPViewModel
@{
    ViewBag.Title = "Kế hoạch chi tiết Bộ Quốc phòng";
    Layout = "~/Views/Shared/_LayoutWebNew.cshtml";
}

@section Styles{
    <link rel="stylesheet" type="text/css" href="~/Content/css/DanhMuc/style.css">
}

<div class="main">
    <div class="panel-list-item col-sm-12">
        <div class="card">
            <div class="card-body" id="lstDataView">
                @Html.Partial("_list", Model)
            </div>
        </div>
    </div>
</div>

@*Modal*@
<div class="modal fade" id="modalKHChiTietBQP" role="dialog" aria-labelledby="modalKHChiTietBQPLabel" aria-hidden="true">
    <div class="modal-dialog" role="document" style="width:60%">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title text-bold text-left" id="modalKHChiTietBQPLabel"></h3>
            </div>
            <div id="contentmodalKHChiTietBQP"></div>
        </div>
    </div>
</div>

@*Modal confirm*@
<div id="divModalConfirm">

</div>

@section Scripts{
    <script src="~/Scripts/QLNH/KeHoachChiTietBQP/jsNH_KeHoachChiTietBQP.js"></script>
    <script src="/Scripts/sheet/jsNumber.js" type="text/javascript"></script>
    <script>
        var _paging = {};
        $(document).ready(function () {
            _paging.CurrentPage = @Model._paging.CurrentPage;
            _paging.ItemsPerPage = @Model._paging.ItemsPerPage;
        });
    </script>
}