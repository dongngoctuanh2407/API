@using Viettel.Models.QLNH
@model DanhmucNgoaiHoi_LoaiHopDongModel

<div class="modal-body">
    <div class="form-group">
        <div class="form-group row">
            <div class="col-sm-6">
                <label>Mã loại hợp đồng</label>
                <p>@Html.Raw(Html.Encode(Model.sMaLoaiHopDong))</p>
            </div>
            <div class="col-sm-6">
                <label>Tên viết tắt</label>
                <p>@Html.Raw(Html.Encode(Model.sTenVietTat))</p>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-6">
                <label>Tên loại hợp đồng</label>
               <p>@Model.sTenLoaiHopDong</p>
            </div>
            <div class="col-sm-6">
                <label>Mô tả</label>
                <p>@Html.Raw(!string.IsNullOrEmpty(Html.Encode(Model.sMoTa)) ? Html.Encode(Model.sMoTa).Replace("\n", "<br/>") : string.Empty)</p>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <div class="text-center">
        <button class="btn btn-default" data-dismiss="modal"><i class="fa fa-ban" aria-hidden="true"></i><span>Hủy</span></button>
    </div>
</div>


